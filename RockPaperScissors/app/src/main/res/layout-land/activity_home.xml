<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/txtWin"
        android:layout_width="162dp"
        android:layout_height="51dp"
        android:text="Who Won?"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="453dp"
        tools:layout_editor_absoluteY="304dp" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="20dp"
        android:layout_height="134dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="16dp"
        android:text="0 : 0"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCompSelect"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="54dp"
        android:text="Paper"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txtWin"
        app:layout_constraintEnd_toStartOf="@+id/txtScore"
        app:layout_constraintTop_toBottomOf="@+id/txtPlayerSelect" />

    <TextView
        android:id="@+id/txtPlayerSelect"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:layout_marginTop="118dp"
        android:text="Rock"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="525dp" />


    <TextView
        android:id="@+id/txtComp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Computer :"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/txtCompSelect"
        app:layout_constraintTop_toBottomOf="@+id/txtPlayer" />

    <TextView
        android:id="@+id/txtPlayer"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:text="Player        :"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txtComp"
        app:layout_constraintEnd_toStartOf="@+id/txtPlayerSelect"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="181dp"
        android:layout_marginBottom="182dp"
        android:onClick="Reset"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPaper"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnRock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="10dp"
        android:onClick="selection"
        android:tag="1"
        app:layout_constraintBottom_toTopOf="@+id/btnPaper"
        app:layout_constraintEnd_toStartOf="@+id/txtPlayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rock" />

    <ImageButton
        android:id="@+id/btnPaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:onClick="selection"
        android:tag="2"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRock"
        app:srcCompat="@drawable/paper" />

    <ImageButton
        android:id="@+id/btnScissor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="318dp"
        android:layout_marginBottom="26dp"
        android:onClick="selection"
        android:tag="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtWin"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/scissors" />

</androidx.constraintlayout.widget.ConstraintLayout>