<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/txtWin"
        android:layout_width="162dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="116dp"
        android:text="Who Won?"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtComp" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="20dp"
        android:layout_height="134dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="16dp"
        android:text="0 : 0"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCompSelect"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="64dp"
        android:text="Paper"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/txtScore"
        app:layout_constraintStart_toEndOf="@+id/txtComp"
        app:layout_constraintTop_toBottomOf="@+id/txtPlayerSelect" />

    <TextView
        android:id="@+id/txtPlayerSelect"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="40dp"
        android:text="Rock"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txtCompSelect"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtComp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="147dp"
        android:text="Computer :"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txtWin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlayer" />



    <TextView
        android:id="@+id/txtPlayer"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="22dp"
        android:text="Player        :"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/txtPlayerSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="35dp"
        android:text="Reset"
        android:onClick="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWin" />

    <ImageButton
        android:id="@+id/btnRock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:onClick="selection"
        android:tag="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPaper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWin"
        app:srcCompat="@drawable/rock" />

    <ImageButton
        android:id="@+id/btnPaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="16dp"
        android:onClick="selection"
        android:tag="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnScissor"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:srcCompat="@drawable/paper"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnScissor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="selection"
        android:tag="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWin"
        app:srcCompat="@drawable/scissors" />

</androidx.constraintlayout.widget.ConstraintLayout>